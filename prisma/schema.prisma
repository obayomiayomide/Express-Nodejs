generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  firstName String
  lastName  String
  password  String
}

model Profile {
  id              Int           @id @default(autoincrement())
  username        String?
  profileImage   
  gender          String?
  field
  skill           Skill[]
  experience      Experience[]
  Project         Project[]
}

model Project {
  id                  Int       @id @default(autoincrement())
  projectName         String
  projectDescription  String
  projectImage        
  projectUrl          String?
  user                User      @relation(fields: [userId], references: [id])
  userId              Int
}

model Skill {
  id                  Int       @id @default(autoincrement())
  skillName           String
  skill               String
  user                User      @relation(fields: [userId], references: [id])
  userId              Int
}

model Experience {
  id                  Int       @id @default(autoincrement())
  jobTitle            String
  companyName         String?
  jobDescription      String?
  user                User      @relation(fields: [userId], references: [id])
  userId              Int
}

model Post {
  id        Int       @id @default(autoincrement())
  title     String
  content   String?
  comments  Comment[]
  published Boolean   @default(false)
  author    User      @relation(fields: [authorId], references: [id])
  authorId  Int
}

model Comment {
  id      Int    @id @default(autoincrement())
  content String
  author  User   @relation(fields: [userId], references: [id])
  userId  Int
  Post    Post?  @relation(fields: [postId], references: [id])
  postId  Int?
}
