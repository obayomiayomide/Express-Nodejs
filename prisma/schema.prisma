generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  firstName String
  lastName  String
  password  String
}

model Profile {
  id              Int           @id @default(autoincrement())
  username        String?
  profileImage   
  gender          String?
  field
  skill           Skill[]
  experience      Experience[]
  porfolio        Porfolio[]
  user            User          @relation(fields: [userId], references: [id])
  userId          Int
}

model Porfolio {
  id             Int            @id @default(autoincrement())
  portfolioName  String
  project        Project[]
  user           User           @relation(fields: [userId], references: [id])
  userId         Int
}

model Project {
  id                  Int       @id @default(autoincrement())
  projectName         String
  projectDescription  String
  projectImage        
  projectUrl          String?
  user                User      @relation(fields: [userId], references: [id])
  userI\d              Int
}

model Skill {
  id                  Int       @id @default(autoincrement())
  skillName           String
  skill               String
  user                User      @relation(fields: [userId], references: [id])
  userId              Int
}

model Experience {
  id                  Int       @id @default(autoincrement())
  jobTitle            String
  companyName         String?
  jobDescription      String?
  user                User      @relation(fields: [userId], references: [id])
  userId              Int
}